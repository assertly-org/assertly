{
    "compilerOptions": {
      "target": "es6",   
      "lib": ["ES2017", "DOM"],   
      // "outDir": "./dist",
      // "outDir": "build",
      "allowJs": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false,
      "sourceMap": true      
    },
    "include": [
      "./src/client.ts"
    ]
  }
