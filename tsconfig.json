{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "api/dist",
    "baseUrl": "./api",
    "experimentalDecorators": true,
    "rootDir": "./api/src",
    "emitDecoratorMetadata": true,
    "lib": [
      "es6",
      "dom"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "api/src/types/*"
      ]
    }
  },
  "include": [
    "api/src/**/*"
  ],
  "types" : [
    "node"
]
}
